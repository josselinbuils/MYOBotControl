<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:orientation="vertical"
    android:rowCount="2"
    tools:ignore="NewApi" >

    <TextView
        android:id="@+id/battView"
        android:layout_width="78dp"
        android:layout_column="0"
        android:layout_gravity="end|bottom"
        android:layout_row="1"
        android:text="" />

    <Button
        android:id="@+id/cnctButton"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:text="Connexion" />

    <ImageButton
        android:id="@+id/topArrow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginBottom="250dp"
        android:layout_row="1"
        android:background="@drawable/flechehaut" />

    <ImageButton
        android:id="@+id/bottomArrow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="220dp"
        android:layout_row="1"
        android:background="@drawable/flechebas" />

    <ImageButton
        android:id="@+id/leftArrow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="220dp"
        android:layout_row="1"
        android:background="@drawable/flechegauche" />

    <ImageButton
        android:id="@+id/rightArrow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="220dp"
        android:layout_row="1"
        android:background="@drawable/flechedroite" />

    <TextView
        android:id="@+id/stateView"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_gravity="left|bottom"
        android:layout_marginLeft="2dp"
        android:layout_row="1" />

    <SeekBar
        android:id="@+id/powerBar"
        android:layout_width="246dp"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="50dp"
        android:layout_row="1" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_row="1"
        android:background="@drawable/musictone" />

    <Button
        android:id="@+id/squareButton"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="75dp"
        android:layout_row="1"
        android:text="CarrÃ©" />

     <Button
         android:id="@+id/circleButton"
         android:layout_column="0"
         android:layout_gravity="right|top"
         android:layout_marginRight="30dp"
         android:layout_marginTop="75dp"
         android:layout_row="1"
         android:text="Cercle" />

</GridLayout>